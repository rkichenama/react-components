{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [ "esnext", "dom" ],
    "module": "esnext",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "jest.config.js"
  ]
}